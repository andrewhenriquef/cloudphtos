<div class="card card-upload">
	<h3>Upload a new photo to gallery</h3>
	<%= form_with model: @photo do |form| %>
		<div class="form-group title-group">
			<%= form.label :title %>
			<%= form.text_field :title, class: 'form-control'%>
		</div>

		<label class="btn btn-primary btn-block upload-button btn-sm">
			Upload a image
			<%= form.file_field :image, style: 'display:none;', id: 'image-field' %>
		</label>
		<label id="file-inputed" style="display:none;"></label>

		<div class="form-buttons row">
			<%= link_to 'back', photos_path, class: 'col-md-4' %>
			<%= form.submit 'Save', class: 'col-md-8 btn btn-success btn-block btn-save btn-sm' %>
		</div>
	<%end%>
</div>